@{
    ViewData["Title"] = "Resumo";
}

@model Pedido;

<h3>Resumo do Pedido</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Nº do Pedido: @Model.Id</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Seus Dados</h3>
                <div>@Model.Cadastro.Nome</div>
                <div>@Model.Cadastro.Telefone</div>
            </div>
            <div class="col-md-3">
                @Model.Cadastro.Email
            </div>
            <div class="col-md-6">
                <h3>Endereço de Entrega</h3>
                <div>@Model.Cadastro.Endereco @Model.Cadastro.Bairro @Model.Cadastro.Municipio @Model.Cadastro.CEP </div>
            </div>
        </div>
        <hr />

        @foreach (var item in Model.Itens)
        {
            <div class="row">
                <div class="col-md-10">
                    <h3>@item.Produto.Nome</h3>
                </div>
                <div class="col-md-2">
                    <h3>@item.Quantidade</h3>
                </div>
            </div>
        }

    </div>
</div>
